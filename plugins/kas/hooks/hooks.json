{
  "description": "Beads daemon lifecycle management",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/ensure-daemon.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
